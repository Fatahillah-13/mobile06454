<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_barang"
        android:layout_width="match_parent"
        android:backgroundTint="@color/teal_200"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/kodebarang"
                android:hint="Kode Barang"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/namabarang"
                android:hint="Nama Barang"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_below="@id/kodebarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/satuanbarang"
                android:hint="Satuan Barang"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_below="@id/namabarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/hargabarang"
                android:hint="Harga Barang"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_below="@id/satuanbarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/tombolhapus"
                android:src="@drawable/baseline_delete_forever_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>